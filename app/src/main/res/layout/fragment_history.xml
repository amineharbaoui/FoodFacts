<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="foodfacts.harbaoui.com.foodfacts.historyproduct.HistoryProductFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_margin="10dp"
        android:background="@drawable/rouned_toolbar">


        <ImageView
            android:id="@+id/iv_menu"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scaleType="center"
            android:src="@drawable/ic_menu" />

        <TextView
            android:id="@+id/et_search_barcode"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:layout_toEndOf="@id/iv_menu"
            android:layout_toLeftOf="@id/iv_search"
            android:layout_toRightOf="@id/iv_menu"
            android:layout_toStartOf="@id/iv_search"
            android:background="@android:color/transparent"
            android:gravity="center_vertical"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="@string/history"
            android:textSize="@dimen/text_size_slarge" />



    </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_history_items"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v7.widget.RecyclerView>


</LinearLayout>
